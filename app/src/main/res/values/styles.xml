<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerStyle</item>
    </style>

    <!-- Style for update dialog window and update list items -->
    <style name="CardViewTheme" parent="AppTheme">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:colorControlHighlight">@color/lightGray</item>
    </style>

    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Style for number pickers (hour and minute) in update dialog window -->
    <style name="NumberPickerStyle" parent="AppTheme">
        <item name="android:editTextColor">@color/colorSecondary</item>
        <item name="android:colorAccent">@color/disabledInactive</item>
        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for date picker in update dialog window -->
    <style name="DatePickerStyle" parent="Theme.AppCompat.Dialog">
        <!--color for buttons, current day number and selected day highlight-->
        <item name="colorAccent">@color/colorSecondary</item>
        <!--color for day numbers and selected date summary on top-->
        <item name="android:textColorPrimary">@color/disabledInactive</item>
        <!--color for year info on the top and day names abbreviations -->
        <item name="android:textColorSecondary">@color/colorSecondary</item>
        <!--color for current day number and selected day highlight-->
        <item name="android:colorControlActivated">@color/colorSecondary</item>
        <!--color for highlighting the day we tap on and hold the tap-->
        <item name="android:colorControlHighlight">@color/colorSecondary</item>
        <!--color for the background of month picker, day picker and buttons-->
        <item name="android:windowBackground">@android:color/white</item>
        <!--color for the background of whole dialog window-->
        <item name="android:backgroundTint">@android:color/white</item>
        <!--color for the thin horizontal stripe between years list and buttons in year picker-->
        <item name="android:colorForeground">@android:color/white</item>
    </style>

    <!-- Style for the list of the weekdays in update element -->
    <style name="DaysListStyle" parent="AppTheme">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/disabledInactive</item>
    </style>

    <!-- Style for the list of the toggle-like weekdays in update dialog window -->
    <style name="ToggleDaysListStyle" parent="DaysListStyle">
        <item name="android:textViewStyle">@style/RoundedDayListElementStyle</item>
    </style>

    <style name="RoundedDayListElementStyle" parent="DaysListStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_day_toggle_disabled_inactive</item>
    </style>

    <!-- Style for transparent activities -->
    <style name="TransparentTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
