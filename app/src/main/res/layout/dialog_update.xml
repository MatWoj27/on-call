<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:theme="@style/CardViewTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <NumberPicker
            android:id="@+id/hour_picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:theme="@style/NumberPickerStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=":"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorSecondary" />

        <NumberPicker
            android:id="@+id/minute_picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:theme="@style/NumberPickerStyle" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/update_type_switch">

            <LinearLayout
                android:id="@+id/days_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/round_day_toggle_disabled_inactive"
                    android:gravity="center"
                    android:text="@string/monday_short"
                    android:textColor="@color/disabledInactive" />

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/round_day_toggle_disabled_inactive"
                    android:gravity="center"
                    android:text="@string/tuesday_short"
                    android:textColor="@color/disabledInactive" />

                <TextView
                    android:id="@+id/wednesday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/round_day_toggle_disabled_inactive"
                    android:gravity="center"
                    android:text="@string/wednesday_short"
                    android:textColor="@color/disabledInactive" />

                <TextView
                    android:id="@+id/thursday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/round_day_toggle_disabled_inactive"
                    android:gravity="center"
                    android:text="@string/thursday_short"
                    android:textColor="@color/disabledInactive" />

                <TextView
                    android:id="@+id/friday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/round_day_toggle_disabled_inactive"
                    android:gravity="center"
                    android:text="@string/friday_short"
                    android:textColor="@color/disabledInactive" />

                <TextView
                    android:id="@+id/saturday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/round_day_toggle_disabled_inactive"
                    android:gravity="center"
                    android:text="@string/saturday_short"
                    android:textColor="@color/disabledInactive" />

                <TextView
                    android:id="@+id/sunday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_day_toggle_disabled_inactive"
                    android:gravity="center"
                    android:text="@string/sunday_short"
                    android:textColor="@color/disabledInactive" />

            </LinearLayout>

            <TextView
                android:id="@+id/exact_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="19, Dec 2019"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/disabledInactive"
                android:visibility="gone" />

        </FrameLayout>

        <ImageView
            android:id="@+id/update_type_switch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/calendar" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ok" />

    </LinearLayout>

</LinearLayout>